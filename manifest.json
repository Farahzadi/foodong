{
  "manifest_version": 3,
  "name": "Foodong",
  "version": "1.0.0",
  "description": "Calculate snappfood dong in follow order page",
  "icons": {
    "16": "icons/16.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://m.snappfood.ir/orders/"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage"],
  "host_permissions": ["https://*/*", "http://*/*"]
}
